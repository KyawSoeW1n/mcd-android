<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.HelpCenterActivity">

    <include
        android:id="@+id/rlHeader"
        layout="@layout/view_screen_title_bar" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlHeader"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <RelativeLayout
                android:id="@+id/rlHelpCenterPhoneOne"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:focusable="true"
                tools:targetApi="lollipop">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imvPhone01"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_phone"
                    tools:ignore="VectorDrawableCompat"
                    android:layout_alignParentLeft="true"
                    tools:targetApi="lollipop" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/lblPhoneNumberOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/quicksand_medium"
                    android:text="09 428155046"
                    android:textColor="@color/colorPrimary"
                    android:layout_toEndOf="@id/imvPhone01"
                    android:layout_toRightOf="@id/imvPhone01"
                    android:textSize="@dimen/text_size_medium" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlHelpCenterPhoneTwo"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@id/rlHelpCenterPhoneOne"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:focusable="true"
                tools:targetApi="lollipop">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imvPhone02"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_phone"
                    tools:ignore="VectorDrawableCompat"
                    android:layout_alignParentLeft="true"
                    tools:targetApi="lollipop" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/lblPhoneNumberTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/imvPhone02"
                    android:text="09 786448046"
                    android:fontFamily="@font/quicksand_medium"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/imvPhone02"
                    android:textSize="@dimen/text_size_medium" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlHelpCenterEmail"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_below="@id/rlHelpCenterPhoneTwo"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:focusable="true"
                tools:targetApi="lollipop">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imvEmail"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_email"
                    tools:ignore="RtlCompat,VectorDrawableCompat"
                    tools:targetApi="lollipop" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/lblHelpCenterEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/imvEmail"
                    android:text="help-center@shwebill.com"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_toRightOf="@id/imvEmail"
                    android:fontFamily="@font/quicksand_medium"
                    tools:ignore="RtlCompat" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>