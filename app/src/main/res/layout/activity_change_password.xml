<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ChangePasswordActivity">

    <include
        android:id="@+id/rlHeader"
        layout="@layout/view_screen_title_bar" />

    <RelativeLayout
        android:id="@+id/rlForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlHeader"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/txtOldPassword"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:background="@null"
            android:drawableEnd="@drawable/ic_1565c0_password"
            android:fontFamily="@font/zawgyi"
            android:hint="@string/activity_change_password__old_password"
            android:inputType="text"
            android:lines="1"
            android:maxLength="32"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_regular"
            tools:ignore="RtlCompat" />

        <View
            android:id="@+id/line01"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txtOldPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:background="@color/colorPrimary"
            android:layerType="software" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/txtNewPassword"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@id/line01"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:background="@null"
            android:drawableEnd="@drawable/ic_1565c0_password"
            android:fontFamily="@font/zawgyi"
            android:hint="@string/activity_change_password__new_password"
            android:inputType="text"
            android:lines="1"
            android:maxLength="32"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_regular"
            tools:ignore="RtlCompat" />

        <View
            android:id="@+id/line02"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txtNewPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:background="@color/colorPrimary"
            android:layerType="software" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/line02"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="54dp"
            android:background="@drawable/ripple_borderless_action_button"
            android:fontFamily="@font/zawgyi"
            android:maxLines="1"
            android:onClick="doChangePasswordSubmit"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="@string/activity_sign_up__submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_regular" />

    </RelativeLayout>
</RelativeLayout>