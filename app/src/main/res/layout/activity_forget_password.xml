<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ForgetPasswordActivity">

    <include
        android:id="@+id/rlHeader"
        layout="@layout/view_screen_title_bar" />

    <RelativeLayout
        android:id="@+id/rlForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlHeader"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:id="@+id/rlPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="52dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/lblCountryCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/zawgyi"
                android:gravity="start"
                android:text="@string/activity_top_up__country_code"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_large" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/txtPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/lblCountryCode"
                android:layout_toRightOf="@id/lblCountryCode"
                android:background="@null"
                android:fontFamily="@font/zawgyi"
                android:hint="@string/activity_top_up__phone_number"
                android:inputType="number"
                android:lineSpacingExtra="6sp"
                android:lines="1"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/text_size_large" />

            <View
                android:id="@+id/line01"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/lblCountryCode"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimary"
                android:layerType="software" />
        </RelativeLayout>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/txtNickname"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/rlPhoneNumber"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:background="@null"
            android:drawableEnd="@drawable/ic_1565c0_security"
            android:drawableRight="@drawable/ic_1565c0_security"
            android:fontFamily="@font/zawgyi"
            android:hint="@string/activity_sign_up__choose_nickname"
            android:inputType="text"
            android:lines="1"
            android:maxLength="30"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_regular" />

        <View
            android:id="@+id/line02"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txtNickname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:background="@color/colorPrimary"
            android:layerType="software" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/txtNativeTown"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/line02"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:background="@null"
            android:drawableEnd="@drawable/ic_1565c0_security"
            android:drawableRight="@drawable/ic_1565c0_security"
            android:fontFamily="@font/zawgyi"
            android:hint="@string/activity_sign_up__choose_native_town"
            android:inputType="text"
            android:lines="1"
            android:maxLength="30"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_regular" />

        <View
            android:id="@+id/line03"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/txtNativeTown"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:background="@color/colorPrimary"
            android:layerType="software" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/line03"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="54dp"
            android:background="@drawable/ripple_borderless_action_button"
            android:fontFamily="@font/zawgyi"
            android:maxLines="1"
            android:onClick="doForgetPasswordSubmit"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="@string/activity_sign_up__submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_regular" />

    </RelativeLayout>
</RelativeLayout>