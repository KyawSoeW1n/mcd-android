<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_verify_phone_number"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.VerifyPhoneNumberActivity">

    <include
        android:id="@+id/rlHeader"
        layout="@layout/view_screen_title_bar" />

    <RelativeLayout
        android:id="@+id/rlBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlHeader"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imvVerifyPhone"
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_verify_phone" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/lblInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imvVerifyPhone"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:fontFamily="@font/zawgyi"
            android:lineSpacingExtra="6sp"
            android:text="@string/activity_verify_phone_number__info"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_regular" />

        <RelativeLayout
            android:id="@+id/rlPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@id/lblInfo"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/lblCountryCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="start"
                android:layout_marginLeft="4dp"
                android:text="@string/activity_verify_phone_number__country_code"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/zawgyi"
                android:textSize="@dimen/text_size_large" />

            <View
                android:id="@+id/vwLine"
                android:layout_width="1.2dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/lblCountryCode"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@+id/lblCountryCode"
                android:background="@color/colorPrimary" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/txtPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/vwLine"
                android:background="@null"
                android:layout_toRightOf="@+id/vwLine"
                android:inputType="number"
                android:lineSpacingExtra="6sp"
                android:lines="1"
                android:textColorHint="@color/colorPrimary"
                android:maxLength="11"
                android:maxLines="1"
                android:hint="@string/activity_verify_phone_number__phone_number"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/zawgyi"
                android:textSize="@dimen/text_size_large" />
        </RelativeLayout>

        <View
            android:id="@+id/line01"
            android:layout_width="match_parent"
            android:layout_height="1.2dp"
            android:layout_below="@id/rlPhoneNumber"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/colorPrimary"
            android:layerType="software" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/line01"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:fontFamily="@font/zawgyi"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="54dp"
            android:background="@drawable/ripple_borderless_action_button"
            android:maxLines="1"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:onClick="goVerifyCodeScreen"
            android:text="@string/activity_verify_phone_number__submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_regular" />

    </RelativeLayout>
</RelativeLayout>
