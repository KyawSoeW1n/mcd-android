<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_qr_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MyQrCodeActivity">

    <include
        android:id="@+id/rlHeader"
        layout="@layout/view_screen_title_bar" />

    <RelativeLayout
        android:id="@+id/rlBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlHeader">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/lblQRHint"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:fontFamily="@font/zawgyi"
            android:text="@string/activity_qr_code__qr_hint"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_medium" />

        <android.support.v7.widget.CardView
            android:id="@+id/cvQrCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblQRHint"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="1dp"
            app:cardMaxElevation="1dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imvQRCode"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_margin="16dp"
                app:srcCompat="@drawable/dummy_ic_qr_code"
                tools:ignore="VectorDrawableCompat"
                android:layout_alignParentLeft="true" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/llcActionButtonGroup"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cvQrCode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:onClick="onClickSave"
                android:background="@drawable/ripple_borderless_action_button"
                android:maxLines="1"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="@string/activity_qr_code__save"
                android:fontFamily="@font/zawgyi"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnShare"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/ripple_borderless_action_button"
                android:maxLines="1"
                android:onClick="onClickShare"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:text="@string/activity_qr_code__share"
                android:fontFamily="@font/zawgyi"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </android.support.v7.widget.LinearLayoutCompat>
    </RelativeLayout>
</RelativeLayout>
