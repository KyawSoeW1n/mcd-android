<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- define background color -->
    <solid android:color="@android:color/transparent" />

    <!-- define border color and thick -->
    <stroke
        android:width="0.5dp"
        android:color="@color/colorPrimary" />

    <!-- some padding for text inside -->
    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />

    <!-- define corner radius, note that radius can be different for each corner -->
    <corners android:radius="1dp" />

</shape>